---
import Repository from '../components/Repository.astro';
---

<section class="relative md:pb-40" data-aos="fade-up">
    <img
        src="/iluminaciones-portfolio.svg"
        class="absolute -top-64 w-4/6 z-0"
        alt="Iluminacion"
    />

    <div class="w-11/12 mx-auto flex justify-center flex-col items-center relative z-10 md:mt-0 mt-40">
        <div class="flex flex-col items-center">
            <h2 class="text-4xl font-extrabold text-white">Mi Portafolio</h2>
            <span class="h-[6px] my-2 w-24 block bg-gradient-to-r from-[#8F00FF] to-[#00B2FF]"
            ></span>
        </div>

        <ul class="grid grid-cols-1 md:grid-cols-3 gap-7 mt-7">
            <a href="#" class="flex flex-col items-center justify-center">
                <div class="w-72 h-52 block bg-gray-800 rounded-md"></div>
                <p class="text-gray-300 mt-4">Similique facilis quisquambeatae?</p>
            </a>
            <a href="#" class="flex flex-col items-center justify-center">
                <div class="w-72 h-52 block bg-gray-800 rounded-md"></div>
                <p class="text-gray-300 mt-4">Similique facilis quisquambeatae?</p>
            </a>
            <a href="#" class="flex flex-col items-center justify-center">
                <div class="w-72 h-52 block bg-gray-800 rounded-md"></div>
                <p class="text-gray-300 mt-4">Similique facilis quisquambeatae?</p>
            </a>
        </ul>
    </div>
</section>

<section class="w-11/12 mx-auto flex flex-col items-center md:mt-0 pt-40" data-aos="fade-up">
    <div class="flex flex-col items-center">
        <h2 class="text-4xl font-extrabold text-white text-center">
            Mis Repositorios de Github
        </h2>

        <span class="h-[6px] my-2 w-24 block bg-gradient-to-r from-[#8F00FF] to-[#00B2FF]"
        ></span>

        <p class="md:w-1/2 text-center text-gray-300">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Dicta, voluptas
            necessitatibus. Qui magn mollitia dolorum optio laboriosam aperiam quisquam
            officiis error beatae!
        </p>
    </div>

    <ul class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8 w-11/12">
        <Repository
            link="https://github.com/gabrieldres-fer/covid-analytic"
            description="La app se dedica a dar informacion de paises especificos sobre la infeccion del covid-19"
            title="Covid Analytic"
        >
            <img src="https://img.icons8.com/color/48/null/javascript--v1.png" />
            <img src="https://img.icons8.com/color/48/null/tailwindcss.png" />
            <img src="https://img.icons8.com/color/48/ffffff/nextjs.png" />
        </Repository>

        <Repository
            link="https://github.com/gabrieldres-fer/url-shortener"
            description="App para acortar urls largas"
            title="Url Shortener"
        >
            <img src="https://img.icons8.com/color/48/null/javascript--v1.png" />
            <img src="https://img.icons8.com/color/48/null/tailwindcss.png" />
            <img
                src="https://img.icons8.com/external-tal-revivo-color-tal-revivo/48/null/
          external-react-a-javascript-library-for-building-user-interfaces-logo-color-tal-revivo.png"
            />
        </Repository>

        <Repository
            link="https://github.com/gabrieldres-fer/react-gifapp"
            description="Aplicacion construida por el consumo de la api de GIPHY"
            title="React Gifapp"
        >
            <img src="https://img.icons8.com/color/48/null/javascript--v1.png" />
            <img src="https://img.icons8.com/color/48/null/css3.png" />
            <img
                src="https://img.icons8.com/external-tal-revivo-color-tal-revivo/48/null/
             external-react-a-javascript-library-for-building-user-interfaces-logo-color-tal-revivo.png"
            />
        </Repository>
    </ul>
</section>
